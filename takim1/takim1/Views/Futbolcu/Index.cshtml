@model List<takim1.Models.Futbolcu>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Futbolcular</h2>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">Yas</th>
            <th scope="col">Mevki</th>
            <th scope="col">Takımı</th>
            @*<th scope="col">Durum</th>*@
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
                <tr>
                    <th scope="row"></th>
                    <td>@m.FutbolcuId</td>
                    <td>@m.FutbolcuAdi</td>
                    <td>@m.FutbolcuSoyadi</td>
                    <td>@m.FutbolcuYas</td>
                    <td>@m.FutbolcuMevki</td>
                    <td>@m.Takim.TakimAdi</td>
                    @*<td>@m.KtgDurum</td>*@
                    <td> <a href=""><button class="btn btn-sm btn-outline-primary ">Detay</button> </td>
                    <td> <a href="/Futbolcu/FutbolcuGet/@m.FutbolcuId"><button class="btn btn-sm btn-info">Guncelle</button> </td>
                    <td> <a href="/Futbolcu/FutbolcuSil/@m.FutbolcuId"><button class="btn btn-sm btn-danger">Sil</button> </a> </td>
                </tr>
        }
    </tbody>
</table>

<a asp-action="FutbolcuEkle" asp-controller="Futbolcu"><button class="btn btn-sm btn-outline-success ">Futbolcu Ekle</button> </a>