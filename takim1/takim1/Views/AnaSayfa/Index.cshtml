@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SayfaLayout.cshtml";
}
<style>
    .slider1{
        width:70%;
        margin-left:auto;
        margin-right:auto;
        border-radius:15px;
    }

    .sirket-a{
        width:80%;
        display:flex;
        align-items:center;
        justify-content:center;
        margin-right:auto;
        margin-left:auto;
        margin-top:120px;
    }
    .sirket{
        margin-top:150px;
        text-decoration:none;
        font-size:40px;
        font-weight:700;
        color: #49B6CA;
    }
    img{
        width: 80%;
        height: 550px;
        border-radius:15px;
    }
</style>

<div class="sirket-a">
    <a href="/AnaSayfa/Index" class="sirket"> Futbol Şirketim! </a>
</div>

<div class="slider1" href="/AnaSayfa/Index">

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
        </ol>
        <div class="carousel-inner" style="
                width:80%; 
                height:550px;
                margin-right:auto;
                margin-left:auto;
                margin-top:50px;
">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/img/superlig.jpg" alt="superlig">
            </div>                                 
            <div class="carousel-item">            
                <img class="d-block w-100" src="/img/sakarya1.jpg" alt="sakarya1">
            </div>                                 
            <div class="carousel-item">            
                <img class="d-block w-100" src="/img/sakarya2.jpg" alt="saarya2">
            </div>                                 
            <div class="carousel-item">            
                <img class="d-block w-100" src="/img/fenerbahce.jpg" alt="saarya2">
            </div>                                 
            <div class="carousel-item">            
                <img class="d-block w-100" src="/img/gs.jpg" alt="saarya2">
            </div>                                 
            <div class="carousel-item">            
                <img class="d-block w-100" src="/img/besiktas.jpg" alt="saarya2">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" style="background-color:#49B6CA; padding:3px;" aria-hidden="true">
            </span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" style="background-color:#49B6CA; padding:3px;" aria-hidden="true">
            </span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
