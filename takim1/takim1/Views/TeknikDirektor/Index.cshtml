@using X.PagedList;
@using X.PagedList.Mvc.Core;

@model IPagedList<takim1.Models.TeknikDirektor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>TeknikDirektorlar</h2>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Adı</th>
            <th scope="col">Soyadı</th>
            <th scope="col">Yas</th>
            <th scope="col">Takımı</th>
            <th scope="col">Maas</th>
            @*<th scope="col">Durum</th>*@
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <th scope="row"></th>
                <td>@m.TeknikDirektorId</td>
                <td>@m.TeknikDirektorAdi</td>
                <td>@m.TeknikDirektorSoyadi</td>
                <td>@m.TeknikDirektorYas</td>
                <td>@m.Takim.TakimAdi</td>
                <td>@m.TeknikDirektorMaas</td>
                @*<td>@m.KtgDurum</td>*@
                <td> <a href=""><button class="btn btn-sm btn-outline-primary ">Detay</button> </td>
                <td> <a href="/TeknikDirektor/TeknikDirektorGet/@m.TeknikDirektorId"><button class="btn btn-sm btn-info">Guncelle</button> </td>
                <td> <a href="/TeknikDirektor/TeknikDirektorSil/@m.TeknikDirektorId"><button class="btn btn-sm btn-danger">Sil</button> </a> </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,page => Url.Action("Index",new {page}))
<a asp-action="TeknikDirektorEkle" asp-controller="TeknikDirektor"><button class="btn btn-sm btn-outline-success ">TeknikDirektor Ekle</button> </a>