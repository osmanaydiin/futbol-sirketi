@model takim1.Models.Kullanici
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
  <head>
	<title>Kaydol</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="~/login/css/style.css">

	<style>
		.kaydol{
			position: relative;
			width: 100%;
			height: 100vh;
			background-size: cover;
			background-repeat: repeat;
			background-attachment: fixed;
			background-position: bottom;
			background-image: url('/img/arkaplan.jpg');
		}
		.kaydol-form{
			width:40%;
			margin-right:auto;
			margin-left:auto;
		}
	</style>

	</head>
	<body>

	<div class="kaydol">
		<br />
		<section style="margin-top:0px;">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-6 col-lg-5">
						<div class="login-wrap p-4 p-md-5" style="background-color:none;">
							<div class="icon d-flex align-items-center justify-content-center">
								<span class="fa fa-user-o"></span>
							</div>
							<h3 class="text-center mb-4" style="color:darkgreen;">Bilgileri Giriniz</h3>
							@using (Html.BeginForm("GiristenKullaniciEkle", "Giris", FormMethod.Post))
							{
								<div class="form-group">
									@*<input type="text" class="form-control rounded-left" name="KullaniciMail" placeholder="Mail giriniz..." required>*@
									@Html.LabelFor(x=>x.KullaniciAdi)
									@Html.TextBoxFor(x=>x.KullaniciAdi , new {@class="form-control"})
								</div>
								<div class="form-group">
									@*<input type="password" class="form-control rounded-left" name="KullaniciSifre" placeholder="Sifre giriniz..." required>*@
									@Html.LabelFor(x=>x.KullaniciSoyadi)
									@Html.TextBoxFor(x=>x.KullaniciSoyadi , new {@class="form-control"})
								</div>
								<div class="form-group">
									@*<input type="password" class="form-control rounded-left" name="KullaniciSifre" placeholder="Sifre giriniz..." required>*@
									@Html.LabelFor(x=>x.KullaniciMail)
									@Html.TextBoxFor(x=>x.KullaniciMail , new {@class="form-control", @type="email"})
								</div>
								<div class="form-group">
									@*<input type="password" class="form-control rounded-left" name="KullaniciSifre" placeholder="Sifre giriniz..." required>*@
									@Html.LabelFor(x=>x.KullaniciSifre)
									@Html.PasswordFor(x=>x.KullaniciSifre, new {@class="form-control"})
								</div>
								@*<div class="form-group d-md-flex">


								</div>*@
								<div class="form-group">
									<button type="submit" class="btn btn-primary rounded submit p-3 px-5">Kaydol</button>
								</div>
							}

						</div>
					</div>
				</div>
			</div>

		</section>
	</div>

	<script src="~/login/js/jquery.min.js"></script>
	<script src="~/login/js/popper.js"></script>
	<script src="~/login/js/bootstrap.min.js"></script>
	<script src="~/login/js/main.js"></script>

	</body>
</html>